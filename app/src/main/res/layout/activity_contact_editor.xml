<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactEditorActivity">

    <Spinner
        android:id="@+id/spContactTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spContactStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/spContactTitle"
        app:layout_constraintTop_toTopOf="@+id/spContactTitle" />

    <EditText
        android:id="@+id/etContactFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_action_smile"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_action_smile"
        android:ems="10"
        android:hint="@string/FirstName"
        android:inputType="textCapWords"
        app:layout_constraintStart_toStartOf="@+id/spContactTitle"
        app:layout_constraintTop_toBottomOf="@+id/spContactTitle" />

    <EditText
        android:id="@+id/etContactLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_action_smile"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_action_smile"
        android:ems="10"
        android:hint="@string/LastName"
        android:inputType="textCapWords"
        app:layout_constraintStart_toStartOf="@+id/etContactFirstName"
        app:layout_constraintTop_toBottomOf="@+id/etContactFirstName" />

    <EditText
        android:id="@+id/etContactCompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_action_company"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_action_company"
        android:ems="10"
        android:hint="Company Name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/etContactLastName"
        app:layout_constraintTop_toBottomOf="@+id/etContactLastName" />

    <EditText
        android:id="@+id/etContactPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_action_phone"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_action_phone"
        android:ems="10"
        android:hint="@string/PhoneNumber"
        android:inputType="phone"
        app:layout_constraintStart_toStartOf="@+id/etContactCompanyName"
        app:layout_constraintTop_toBottomOf="@+id/etContactCompanyName" />

    <EditText
        android:id="@+id/etContactEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_action_email_outline"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_action_email_outline"
        android:ems="10"
        android:hint="@string/Email"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/etContactPhone"
        app:layout_constraintTop_toBottomOf="@+id/etContactPhone" />

    <MultiAutoCompleteTextView
        android:id="@+id/etContactDetails"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/Details"
        app:layout_constraintStart_toStartOf="@+id/etContactEmail"
        app:layout_constraintTop_toBottomOf="@+id/etContactEmail" />

</android.support.constraint.ConstraintLayout>